{
  "name": "PyRIGS",
  "description": "",
  "scripts": {
    "postdeploy": "python manage.py migrate && python manage.py generateSampleData"
  },
  "stack": "heroku-20",
  "env": {
    "DEBUG": {
      "required": true
    },
    "STAGING": "1",
    "EMAIL_FROM": {
      "required": true
    },
    "EMAIL_HOST": {
      "required": true
    },
    "EMAIL_HOST_PASSWORD": {
      "required": true
    },
    "EMAIL_HOST_USER": {
      "required": true
    },
    "EMAIL_PORT": {
      "required": true
    },
    "EMAIL_USE_SSL": {
      "required": true
    },
    "RECAPTCHA_PRIVATE_KEY": {
      "required": true
    },
    "RECAPTCHA_PUBLIC_KEY": {
      "required": true
    },
    "SECRET_KEY": {
      "generator": "secret"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/python"
    }
  ]
}
